<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Connection"
    android:focusableInTouchMode="true">

    <include layout="@layout/background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signIn"
        android:id="@+id/textView"
        android:textSize="35sp"
        android:gravity="center"
        android:enabled="false"
        android:textColor="@color/text"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_login"
        android:text="ate"
        android:editable="false"
        android:inputType="text"
        android:minWidth="300dp"
        android:minHeight="40dp"
        android:hint="@string/login"
        android:textSize="25sp"
        android:background="@drawable/rounded_edit_text"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:text="ate"
        android:editable="false"
        android:inputType="textPassword"
        android:minWidth="300dp"
        android:minHeight="40dp"
        android:hint="@string/password"
        android:textSize="25sp"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/et_login"
        android:layout_alignLeft="@+id/et_login"
        android:layout_alignStart="@+id/et_login"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_ok"
        android:id="@+id/btn_tryLogin"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/moments2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_tryLogin"
        android:layout_toEndOf="@+id/btn_tryLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@null"
        android:id="@+id/textView2"
        android:layout_below="@+id/btn_tryLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#375D81"
        android:maxHeight="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/Registration"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#375D81"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:onClick="onClick"
        android:clickable="true"/>

    <ImageButton
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:id="@+id/imgBtn_tryLoginFb"
        android:src="@drawable/icon_facebook_resize"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/btn_tryLogin"
        android:layout_toRightOf="@+id/btn_tryLogin"
        android:layout_toEndOf="@+id/btn_tryLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgottenPassword"
        android:id="@+id/tv_forgottenPassword"
        android:autoLink="none"
        android:textColor="@color/text"
        android:textStyle="italic"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/imgBtn_tryLoginFb"
        android:layout_toEndOf="@+id/imgBtn_tryLoginFb"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <Button
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/withFacebook"
        android:textAllCaps="false"
        android:id="@+id/btn_SignUpViaFb"
        android:layout_below="@+id/Registration"
        android:layout_alignLeft="@+id/btn_tryLogin"
        android:layout_alignStart="@+id/btn_tryLogin"
        android:layout_marginTop="8dp"/>

    <Button
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/withForm"
        android:textAllCaps="false"
        android:id="@+id/btn_SignUpViaForm"
        android:layout_alignTop="@+id/btn_SignUpViaFb"
        android:layout_alignRight="@+id/et_password"
        android:layout_alignEnd="@+id/et_password" />

</RelativeLayout>